@model RoyalAirlines.Models.Flight
@{
    ViewBag.Title = "Home";
}

<header id="gtco-header" class="gtco-cover gtco-cover-md" role="banner" style="background-image: url(images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">
                <div class="row row-mt-15em">
                    <div class="col-md-7 mt-text" data-animate-effect="fadeInUp">
                        <h1>Travel in luxury! Fly with Royal Airlines</h1>
                    </div>
                    <div id="bookNowForm" class="col-md-4 col-md-push-1" data-animate-effect="fadeInRight">
                        <div class="form-wrap">
                            <div class="tab">

                                <div class="tab-content">
                                    <div class="tab-content-inner active" data-content="signup">
                                        <h3>Book Your Trip</h3>
                                        @using (Html.BeginForm("Search", "Flights"))
                                        {
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(f => f.Origin)
                                                    @Html.TextBoxFor(f => f.Origin, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(f => f.Origin)
                                                </div>

                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(f => f.Destination)
                                                    @Html.TextBoxFor(f => f.Destination, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(f => f.Destination)
                                                </div>

                                            </div>
                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    @Html.LabelFor(f => f.Time)
                                                    @Html.TextBoxFor(f => f.Time, "{0:d MMM yyyy}", new { @class = "form-control", id = "travelDate" })
                                                    @Html.ValidationMessageFor(f => f.Time)
                                                </div>

                                            </div>
                                            @Html.HiddenFor(f => f.Id)
                                            @Html.AntiForgeryToken()

                                            <div class="row form-group">
                                                <div class="col-md-12">
                                                    <button type="submit" class="btn btn-primary btn-block" >Find Flight</button>
                                                </div>
                                            </div>
                                        }
                                    </div>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</header>

<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading">
                <h2>Popular Destination</h2>
            </div>
        </div>
        <div class="row">

            <div class="col-lg-4 col-md-4 col-sm-6">
                <a href="../../images/img_1.jpg" class="fh5co-card-item image-popup">
                    <figure>
                        <img src="../../images/img_1.jpg" alt="Image" class="img-responsive">
                    </figure>
                    <div class="fh5co-text">
                        <h2>New York, USA</h2>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <a href="images/img_2.jpg" class="fh5co-card-item image-popup">
                    <figure>
                        <img src="images/img_2.jpg" alt="Image" class="img-responsive">
                    </figure>
                    <div class="fh5co-text">
                        <h2>Seoul, South Korea</h2>
                    </div>
                </a>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6">
                <a href="images/img_3.jpg" class="fh5co-card-item image-popup">
                    <figure>
                        <img src="images/img_3.jpg" alt="Image" class="img-responsive">
                    </figure>
                    <div class="fh5co-text">
                        <h2>Paris, France</h2>
                    </div>
                </a>
            </div>


        </div>
    </div>
</div>

<div id="gtco-features">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center gtco-heading   ">
                <h2>How It Works</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6">
                <div class="feature-center" data-animate-effect="fadeIn">
                    <span class="icon">
                        <i>1</i>
                    </span>
                    <h3>Decide a location</h3>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="feature-center" data-animate-effect="fadeIn">
                    <span class="icon">
                        <i>2</i>
                    </span>
                    <h3>Book a flight</h3>
                </div>
            </div>
            <div class="col-md-4 col-sm-6">
                <div class="feature-center" data-animate-effect="fadeIn">
                    <span class="icon">
                        <i>3</i>
                    </span>
                    <h3>Travel the world</h3>
                </div>
            </div>


        </div>
    </div>
</div>

<div class="gtco-cover gtco-cover-sm" style="background-image: url(images/img_bg_2.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="gtco-container text-center">
        <div class="display-t">
            <div class="display-tc">
                <h1>We have high quality services that you will surely love!</h1>
            </div>
        </div>
    </div>
</div>

