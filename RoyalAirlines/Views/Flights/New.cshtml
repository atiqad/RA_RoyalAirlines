@model RoyalAirlines.Models.Flight
@{
    ViewBag.Title = "New Flight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(../../images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">
                <div class="row row-mt-15em">

                    <div class="col-md-12 mt-text " data-animate-effect="fadeInUp">
                        <h1>New Flight</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="gtco-section border-bottom">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-6 text-center ">
                @using (Html.BeginForm("Save", "Flights"))
                {
                    <div class="form-group">
                        @Html.LabelFor(f => f.Code)
                        @Html.TextBoxFor(f => f.Code, new { @class = "form-control" })
                        @Html.ValidationMessageFor(f => f.Code)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(f => f.Time)
                        @Html.TextBoxFor(f => f.Time, "{0:d MMM yyyy}", new { @class = "form-control" })
                        @Html.ValidationMessageFor(f => f.Time)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(f => f.Origin)
                        @Html.TextBoxFor(f => f.Origin, new { @class = "form-control" })
                        @Html.ValidationMessageFor(f => f.Origin)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(f => f.Destination)
                        @Html.TextBoxFor(f => f.Destination, new { @class = "form-control" })
                        @Html.ValidationMessageFor(f => f.Destination)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(f => f.seatsEmpty)
                        @Html.TextBoxFor(f => f.seatsEmpty, new { @class = "form-control" })
                        @Html.ValidationMessageFor(f => f.seatsEmpty)
                    </div>
                    @Html.HiddenFor(f => f.Id)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>

                
