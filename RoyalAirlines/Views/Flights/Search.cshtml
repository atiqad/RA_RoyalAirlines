@model RoyalAirlines.ViewModels.SearchFlightViewModel
@{
    ViewBag.Title = "Search Flight";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(../../images/img_bg_1.jpg)">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">
                <div class="row row-mt-15em">

                    <div class="col-md-12 mt-text " data-animate-effect="fadeInUp">
                        <h1>Search Result</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="gtco-section border-bottom">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 text-center ">
                @if (!Model.Flights.Any())
                {
                    <h2>No results found.</h2>
                }
                else
                {
                    <table id="tblSearchFlights" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Flight Code</th>
                                <th>From</th>
                                <th>To</th>
                                <th>Time</th>
                                <th>Vacant Seats</th>
                                <th>Book</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var flight in Model.Flights)
                            {
                                <tr>
                                    <td>@flight.Code</td>
                                    <td>@flight.Origin</td>
                                    <td>@flight.Destination</td>
                                    <td>@flight.Time</td>
                                    <td>@flight.seatsEmpty</td>
                                    <td><button class="btn btn-primary">Book</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                }
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script>
        $(document).ready(function(){
            $("#tblSearchFlights").DataTable();
        });

    </script>
}